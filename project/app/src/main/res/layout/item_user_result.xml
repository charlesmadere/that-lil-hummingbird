<?xml version="1.0" encoding="utf-8"?>
<com.charlesmadere.hummingbird.views.UserResultItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardItem.NoPadding.NothingSpecial">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/root_padding_half">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdvImage"
                android:layout_marginEnd="@dimen/root_padding"
                style="@style/Avatar.Medium" />
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <com.charlesmadere.hummingbird.views.TypefaceTextView
                    android:id="@+id/tvTitle"
                    tools:text="LimitB"
                    style="@style/UserTitle" />
                <com.charlesmadere.hummingbird.views.TypefaceTextView
                    android:id="@+id/tvBio"
                    tools:text="Hello, World!"
                    style="@style/UserBio.Limited" />
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/Divider" />
    </LinearLayout>
</com.charlesmadere.hummingbird.views.UserResultItemView>
