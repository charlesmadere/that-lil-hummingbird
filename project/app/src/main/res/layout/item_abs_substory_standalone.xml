<?xml version="1.0" encoding="utf-8"?>
<com.charlesmadere.hummingbird.views.AbsSubstoryStandaloneItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DividerListItem.NoPadding">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/root_padding_half"
            android:paddingEnd="@dimen/root_padding"
            android:paddingStart="@dimen/root_padding"
            android:paddingTop="@dimen/root_padding_half">
            <com.charlesmadere.hummingbird.views.AvatarView
                android:id="@+id/avatarView"
                android:layout_marginEnd="@dimen/root_padding_half"
                style="@style/Avatar.Small" />
            <com.charlesmadere.hummingbird.views.AbsSubstoryTextView
                android:id="@+id/absSubstoryTextView"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/avatarView"
                android:layout_width="match_parent"
                android:textSize="@dimen/text_small"
                app:keyTextColor="?attr/colorAccent"
                tools:text="ThatLilChestnut is currently watching." />
            <com.charlesmadere.hummingbird.views.TypefaceTextView
                android:id="@+id/tvTimeAgo"
                android:layout_below="@id/absSubstoryTextView"
                android:layout_toEndOf="@id/avatarView"
                tools:text="2 days ago"
                style="@style/TimeOrDate" />
        </RelativeLayout>
        <View
            style="@style/Divider" />
    </LinearLayout>
</com.charlesmadere.hummingbird.views.AbsSubstoryStandaloneItemView>
