<?xml version="1.0" encoding="utf-8"?>
<com.charlesmadere.hummingbird.views.GroupMemberItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DividerListItem">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/root_padding"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <com.charlesmadere.hummingbird.views.AvatarView
                android:id="@+id/avatarView"
                android:layout_gravity="center"
                style="@style/Avatar.Medium" />
            <com.charlesmadere.hummingbird.views.TypefaceTextView
                tools:text="@string/member"
                style="@style/Badge.GroupMember" />
        </FrameLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <com.charlesmadere.hummingbird.views.TypefaceTextView
                android:id="@+id/tvTitle"
                tools:text="LimitB"
                style="@style/UserTitle" />
            <com.charlesmadere.hummingbird.views.TypefaceTextView
                android:id="@+id/tvBio"
                tools:text="Hello, World!"
                style="@style/UserBio.Limited" />
        </LinearLayout>
    </LinearLayout>
</com.charlesmadere.hummingbird.views.GroupMemberItemView>
