<?xml version="1.0" encoding="utf-8"?>
<com.charlesmadere.hummingbird.views.FollowedSubstoryItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/root_padding_half"
    android:paddingTop="@dimen/root_padding_half">
    <com.charlesmadere.hummingbird.views.AvatarView
        android:id="@+id/avatarView"
        android:layout_marginEnd="@dimen/root_padding"
        style="@style/Avatar.Small" />
    <com.charlesmadere.hummingbird.views.TypefaceTextView
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/tvUsername"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxLines="2"
        android:textColor="?attr/colorAccent"
        tools:text="Sirius201" />
</com.charlesmadere.hummingbird.views.FollowedSubstoryItemView>
